{
  "name": "screeps-ai",
  "version": "0.0.1",
  "description": "Screeps AI implementation",
  "main": "index.js",
  "//": "If you add or change the names of destinations in screeps.json, make sure you update these scripts to reflect the changes",
  "scripts": {
    "lint": "eslint src/ --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "build": "rollup -c",
    "push-main": "rollup -c --environment DEST:main",
    "push-pserver": "rollup -c --environment DEST:pserver",
    "push-sim": "rollup -c --environment DEST:sim",
    "test": "npm run lint && npm run build",
    "watch-main": "rollup -cw --environment DEST:main",
    "watch-pserver": "rollup -cw --environment DEST:pserver",
    "watch-sim": "rollup -cw --environment DEST:sim"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spacerecycler/screeps-ai.git"
  },
  "author": "Spacerecycler <spacerecycler@gmail.com>",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/spacerecycer/screeps-ai/issues"
  },
  "homepage": "https://github.com/spacerecycler/screeps-ai",
  "private": true,
  "engines": {
    "node": ">=10.13.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.0",
    "@rollup/plugin-typescript": "^3.0.0",
    "@types/lodash": "^3.10.1",
    "@types/node": "^10.17.14",
    "@types/screeps": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "prettier": "1.19.1",
    "rollup": "^1.31.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-screeps": "^0.1.2",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "haikunator": "^2.1.2",
    "source-map": "~0.6.1"
  }
}
